            <input
              type="text"
              name="solution_field"
              value={@solution}
              placeholder="Played"
              maxlength="5"
            />
          </div>
        </div>
        <%= for n <- 0..5 do %>
          <div class="pt-6 flex flex-row">
            <div class="basis-3/4">
              <input
                type="text"
                name={n}
                value={Enum.at(@guesses, n)}
                maxlength="5"
                placeholder={Integer.to_string(n + 1)}
              />
            </div>
          </div>
        <% end %>
      </form> -->
    </div>
  </div>
</main>
